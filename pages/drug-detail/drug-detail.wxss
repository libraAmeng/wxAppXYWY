.drug-tap{
  height: 88rpx;
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
  box-sizing:border-box;
  margin-bottom: 32rpx;
  margin-top: 52rpx;
}
.tap {
  background-color: #0facef;
  color:#ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 90%;
  box-sizing:border-box;
  border-radius: 10rpx;
  font-weight: bold;
  font-size: 32rpx;

}
.banner {
  padding-top: 0px; 
  height: 190px;
  width: 100%;
  background-color: #f2f2f2;
  border-bottom:solid 1rpx #e6e6e6;
}
.slide-image {
  width: 100%;
  height: 190px;
}
.recommand-image {
  margin-right: 16rpx;
}
