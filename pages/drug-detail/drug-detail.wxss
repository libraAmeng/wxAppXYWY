page {
  background-color: #f2f2f2;
}
.drug-info-view {
  background-color: white; 
  padding: 32rpx 32rpx 28rpx 32rpx;
  border-bottom:solid 1rpx #e6e6e6;
}

.drug-image {
  width: 200rpx;
  height: 200rpx;
  background-color: #f2f2f2;
}
.text {
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
  color: #999999;
  font-size: 24rpx;
}

.approval{
  margin-top: 24rpx;
}
.brand {
  font-size: 32rpx;
  color: #333333;
}

.price {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  color: #ff9c00;
}
.number {
  font-size: 48rpx;
  margin-right: 5rpx;
  margin-left: 3rpx;
  font-weight: bold;
}
.unit {
  font-size: 20rpx;
}
.drug-introduce{
  margin-top: 16rpx;
  background-color: white;
  color: #666666;
  font-size: 26rpx;
  border-bottom:solid 1rpx #e6e6e6;
  border-top: solid 1rpx #e6e6e6;
}
.introduce-title {
  font-size: 28rpx;
  padding: 24rpx 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333333;
  border-bottom:solid 1rpx #e6e6e6;
}
.introduce-detail {
  padding: 0rpx 17rpx;
  margin-bottom: 32rpx;
}

.detail-title {
  margin-top: 32rpx;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  color: #333333;
}
.convertHtmlToText-title {
   margin-top: 32rpx;
  font-size: 28rpx;
  color: #333333;
}
.detail-newlinetext{
   font-size: 24rpx;
  color: #666666;
  margin-left: 15rpx;
  line-height: 32rpx;
}
.newline{
    font-size: 24rpx;
  color: #666666;
  margin-left: 15rpx;
}
.detail-text {
  font-size: 24rpx;
  color: #666666;
  margin-left: 15rpx;
  line-height: 32rpx;
}
