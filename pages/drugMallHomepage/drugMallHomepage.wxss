.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  /*align-items: center;*/
  background-color: #fff;
 
}

.banner {
  padding-top: 0px; 
  height: 150px;
  width: 100%;
  background-color: #fff;
}
.slide-image {
  background-color: #fff;
  width: 100%;
  height: 150px;
}

/* 为您推荐 */
.recommend-line {
  background-color: #f2f2f2;
  padding-top: 6px;
  padding-bottom: 6px;
  width: 100%;
  display: flex;
  flex-direction: row;
  
}

.icon-container {
  padding-left: 16px;
  font-size: 12px;  
  color: #cbcdcc;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

/* 药品列表 */
.drug-type-container {
  /*background-color: red;*/
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #fff;

}
.durg-type-head {
  display: flex;
  flex-direction: row;
  width: 100%;
}
.durg-type-scroll {
  white-space: nowrap;
  height: 30px;
  width: 100%;
  /*background-color: deepskyblue;*/
  display: flex;
  flex-direction: row;
}
.drug-type-button {
  background-color: #fff;
  display: inline-block; 
  height: 30px;
  text-align: center;
  font-size:13px;
  /*border:#7a7a7a 0px;*/
  border-radius:0px;
  margin-left: 2px;
  
}

.drug-type-button-selected {
  border-bottom: 2px solid #22baf2;
}


.drug-type-list {
  background-color: #fff;
  padding-top: 0px;
  border-bottom: 1rpx solid #e6e6e6;
}

.item-container {
  /*background-color: greenyellow;*/
  display: flex;
  /*display: inline-flex;*/
  flex-direction: row;
  justify-content: space-around;
  /*padding-bottom: 12px;*/
  /*border-bottom: 1rpx solid #e6e6e6;*/
  border-top: 1rpx solid #e6e6e6;
}

.left-item {
  /*background-color: deepskyblue;*/
  display: flex;
  flex-direction: column;
  padding-top: 16px;
}
.middle-line {
  height: 100%;
  width: 1px;
  background: #e6e6e6;
  /*border-left: 1rpx solid #e6e6e6;*/

}
.middle-line-image {
  background-color: #e6e6e6;
}
.right-item {
  /*background-color: deeppink;*/
  display: flex;
  flex-direction: column;
  padding-top: 16px;
}
.item-name-text {
  font-size: 14px;
  color: #666;
  padding-top: 6px;
}
.have-price {
  /*background-color: lawngreen;*/
  display: flex;
  flex-direction: row;
}
.price-left {
  font-size: 8px;
  color: #ff9c00;
  padding-right: 1px;
  /*padding-top: 6px;*/
}
.item-money-text {
  font-size: 14px;
  color: #ff9c00;
  padding-top: 6px;
}
.price-right {
  font-size: 8px;
  color: #ff9c00;
  padding-left: 1px;
}
.not-price {
  font-size: 14px;
  color: #888;
  padding-top: 6px;
}