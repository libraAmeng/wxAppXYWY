/* pages/consult/index.wxss */

page{
  height: 100%;
  width:100%;
  background-color: #f2f2f2;
}

/* 我的咨询列表样式 */
.body {
  /*height: 100%;*/
  background-color: #f2f2f2;
}


.list-wrap{
  position: relative;
  margin-bottom: 20rpx;
  background: #fff;
}

.list-content-top {
  display: flex;
  flex-direction:row;
  /*min-height: 100%;*/
  justify-content: space-between;
  height: 42px;
}

.list-content-left {
  margin-top: 10px;
  display: flex;
  align-content: center;
  flex-direction: row;
  margin-left: 16px;
  /*text-align: center;*/
  font-family: 14px;
  color: #000000;
  flex: 1;
  
}

.list-content-right {
  /*margin-top: 6px;*/
  margin-right: 16px;
  text-align: center;
  height: 42px;
  line-height: 42px;
  
}

.topPay {
   margin-top: 6px;
}

.list-content-bottom {
  margin-left: 16px;
  margin-top: 12px;
  margin-right: 16px;
  padding-bottom: 12px;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 12px;
  color: #353535;
  line-height: 18px;

}
.status-toPay{
  width: 69px;
  height:30px;
  line-height:30px;
  font-size:13px;
  border:1px #ffbe00 solid;
  border-radius: 3px;
  color:#ffbe00;
}

.status-haveAnswer {
  font-size:12px;
  color:#ffbe00;
}

.status-notAnswer{
  font-size:12px;
  color:#7ddcff;
}



.questionStatus{
  display: -webkit-flex;
  display: flex;
}

.dis-box{
  display: -webkit-flex;
  display: flex;
}


.not-data-style {
  padding-top: 150px;
  color: #999;
  text-align: center;
  font-size: 17px;
  
}

/* 下拉刷新 */
.pullRefresh {
  margin-top: 10px;
  background-color: #f2f2f2;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  display: flex;
  color: #888;
  font-size: 13px;
  height: 15px;
  line-height: 15px;
}

.refresh-icon {
  padding-top: 2px;
  padding-right: 7px;
}