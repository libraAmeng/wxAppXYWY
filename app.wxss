.text-elli {
	  display: box;
    display: -webkit-box;
    display: -moz-box;
    display: -ms-box;
    -webkit-box-orient: vertical;
    -moz-box-orient: vertical;
    -ms-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 1;
    -moz-line-clamp: 1;
    -ms-line-clamp: 1;
    word-wrap: break-word;
}
