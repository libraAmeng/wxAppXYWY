/*loading*/
.load-box{
  position:absolute;
  left:50%;
  top:50%;
  margin-top:-120rpx;
  margin-left: -120rpx;
  padding-top:50rpx;
  width:240rpx;
  height:240rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 20rpx;
  text-align: center;
  box-shadow:3px 3px 30px 10px rgba(0,0,0,0.1);
}
.load-box image{
  display: block;
  margin: 0rpx auto;
}
.load-box text{
  color:#000;
  font-size:32rpx;
  margin-top: 30rpx;
}

